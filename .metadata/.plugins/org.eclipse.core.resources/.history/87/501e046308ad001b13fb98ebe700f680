package decisao;

import javax.swing.JOptionPane;

public class Lista2Exercicio4 {

	public static void main(String[] args) {

		/* 1. Elabore uma aplicação que leia o valor de dois números inteiros e a operação aritmética desejada; 
		/	calcule, então, a resposta adequada. Utilize os símbolos aritméticos para ler qual a operação 
		/	aritmética escolhida. (exemplo: + para somar, - para subtrair e assim sucessivamente) 
 		/	 
		*/

		int valor1 = Integer.parseInt(JOptionPane.showInputDialog("Qual o numero 1 "));
		int valor2 = Integer.parseInt(JOptionPane.showInputDialog("Qual o numero 2 "));
		char operacao = JOptionPane.showInputDialog
				("Digite: \n <+> Somar\n<-> Subtrair\n <*> Multiplicar\n </> Dividir").charAt(0);
		int resultado =0;
		
		if (operacao=='+') {
			resultado=valor1+valor2;
		}else if (operacao=='-') {
			resultado=valor1-valor2;
		}else if (operacao=='*') {
			resultado=valor1*valor2;
		}else if (operacao=='/') {
			resultado=valor1/valor2;
		}else {
			System.out.println("Opção inválida");
		}
		System.out.println("Resultado: " + resultado);
		}
				
		
		
	}






