package decisao;

import javax.swing.JOptionPane;

public class DesafioDecisaoSimples {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*
		 * Pedir: Nome e idade
		 * De acordo com as regras para votação no Brasil
		 * Oriente o usuário se ele pode votar, se ele não pode votar
		 * ou se o voto é facultativo
		 * 
		 * 
		 * 
		 */
		
		
		String eleitor = JOptionPane.showInputDialog("Eleitor: ");
		float idade = Float.parseFloat(JOptionPane.showInputDialog("Qual sua idade: "));
		
		if(idade<16) {
			System.out.println("Voce não pode votar:  ");}
	
		if (idade >= 16 && idade <=17  || idade>70) {
		System.out.println("Seu voto é facultativo  ");}
		
		if (idade >= 18 && idade <=69 ) {
			System.out.println("Seu voto é obrigatório ");}
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
